{
	"type": "module",
	"name": "pause-ai",
	"private": true,
	"packageManager": "pnpm@9.14.4",
	"scripts": {
		"clean": "tsx scripts/clean.ts",
		"inlang:settings": "tsx scripts/inlang-settings.ts",
		"inlang:force": "tsx scripts/inlang-settings.ts --force",
		"translate": "tsx scripts/translation/translate",
		"translate:debug": "tsx scripts/translation/translate --mode debug",
		"translate:dry-run": "tsx scripts/translation/translate --dryRun",
		"translate:estimate": "tsx scripts/translation/translate --dryRun --verbose",
		"translate:spend": "cross-env L10N_FORCE_TRANSLATE=true tsx scripts/translation/translate",
		"dev": "run-s dev:steps",
		"dev:steps": "run-s inlang:settings translate && vite dev --host 0.0.0.0",
		"build": "cross-env NODE_ENV=production run-s build:steps",
		"build:dev": "cross-env NODE_ENV=development node scripts/filter-build-log.js \"run-s build:steps\"",
		"build:steps": "run-s inlang:settings translate && vite build --emptyOutDir=false && run-s _postbuild:*",
		"_postbuild:pagefind": "tsx scripts/create-pagefind-index.ts",
		"_postbuild:exclude": "tsx scripts/exclude-from-edge-function.ts",
		"_postbuild:caching": "tsx scripts/opt-in-to-caching.ts",
		"test": "vitest",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^2.0.4",
		"@sveltejs/adapter-netlify": "^5.0.1",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/escape-html": "^1.0.4",
		"@types/glidejs__glide": "^3.6.6",
		"@types/minimist": "^1.2.5",
		"@types/node": "^20.17.31",
		"@types/remark-heading-id": "^1.0.0",
		"@types/ua-parser-js": "^0.7.39",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"axios": "^1.7.7",
		"axios-retry": "^4.5.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.46.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"mdsvex": "^0.11.2",
		"minimist": "^1.2.8",
		"npm-run-all2": "^6.2.6",
		"openai": "^4.67.3",
		"p-queue": "^8.0.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"remark-heading-id": "^1.0.1",
		"remove-markdown": "^0.5.5",
		"simple-git": "^3.27.0",
		"svelte": "^4.2.19",
		"svelte-check": "^4.1.6",
		"tslib": "^2.8.1",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"vite": "^5.4.18",
		"vitest": "^2.1.9"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.39.0",
		"@fontsource/roboto-slab": "^5.2.5",
		"@fontsource/saira-condensed": "^5.2.5",
		"@glidejs/glide": "~3.6.2",
		"@pagefind/default-ui": "^1.3.0",
		"@prgm/sveltekit-progress-bar": "^2.0.0",
		"@sveltejs/enhanced-img": "~0.3.10",
		"@turf/distance": "^7.2.0",
		"@types/mapbox-gl": "^2.7.21",
		"airtable": "^0.12.2",
		"axios": "^1.9.0",
		"clipboard-polyfill": "^4.1.1",
		"easy-web-worker": "^7.0.2",
		"escape-html": "^1.0.3",
		"github-slugger": "^2.0.0",
		"html-to-image": "^1.11.13",
		"lucide-svelte": "^0.325.0",
		"maplibre-gl": "^5.4.0",
		"maplibregl-mapbox-request-transformer": "^0.0.2",
		"pagefind": "^1.3.0",
		"rehype-slug": "^5.1.0",
		"remark-toc": "^9.0.0",
		"remark-unwrap-images": "^3.0.1",
		"shiki": "^0.14.7",
		"snakecase-keys": "^8.0.1",
		"svelte-file-dropzone": "^2.0.9",
		"svelte-french-toast": "^1.2.0",
		"svelte-loading-spinners": "^0.3.6",
		"svelte-markdown": "^0.4.1",
		"svelte-toc": "^0.5.9",
		"ua-parser-js": "^1.0.40"
	}
}
