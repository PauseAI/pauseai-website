		"lucide-svelte": "^0.325.0",
		"mapbox-gl": "^3.7.0",
		"pagefind": "^1.1.1",
		"rehype-slug": "^5.1.0",
		"remark-toc": "^9.0.0",
		"remark-unwrap-images": "^3.0.1",
		"shiki": "^0.14.7",
