		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.44.1",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"mdsvex": "^0.11.2",
		"npm-run-all2": "^6.2.3",
		"openai": "^4.67.3",
		"p-queue": "^8.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"simple-git": "^3.27.0",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.4",
		"tslib": "^2.7.0",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.8"
	},
